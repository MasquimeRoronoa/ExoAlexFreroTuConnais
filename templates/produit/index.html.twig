{% extends 'baseAdmin.html.twig' %}

{% block title %}Liste des Produits{% endblock %}

{% block body %}
    <div class="content-wrapper">
    <h1>Liste des Produits</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>NomP</th>
                <th>Prix</th>
                <th>Description</th>
                <th>Image</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for produit in produits %}
            <tr>
                <td>{{ produit.id }}</td>
                <td>{{ produit.NomProduit }}</td>
                <td>{{ produit.PrixProduit }}</td>
                <td>{{ produit.DescProduit }}</td>
                <td><img src="{{ vich_uploader_asset(produit.image, "imageFile") }}" style="width: 200px; height: 150px;" alt=""></td>
                <td>
                    <button class="btn btn-primary"><a href="{{ path('produit_show', {'id': produit.id}) }}">show</a></button>
                    <button class="btn btn-danger"><a href="{{ path('produit_edit', {'id': produit.id}) }}">edit</a></button>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">Aucun Produit</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <button class="btn btn-success"><a href="{{ path('produit_new') }}">Ajouter un Produit</a></button>
    </div>
{% endblock %}
