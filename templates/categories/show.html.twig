{% extends 'baseAdmin.html.twig' %}

{% block title %}Catégories{% endblock %}

{% block body %}
    <div class="content-wrapper">
    <h1>Catégories</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ category.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ category.NomCategorie }}</td>
            </tr>
        </tbody>
    </table>

        <button class="btn btn-primary"><a href="{{ path('categories_index') }}">Retour à la Liste</a></button>

        <button class="btn-danger"><a href="{{ path('categories_edit', {'id': category.id}) }}">Editer</a></button>

    {{ include('categories/_delete_form.html.twig') }}
    </div>
{% endblock %}
