{% extends 'baseAdmin.html.twig' %}

{% block title %}Récéption{% endblock %}

{% block body %}
    <div class="content-wrapper">
    <h1>Boite de Réception</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Mail</th>
                <th>Sujet</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for contact in contacts %}
            <tr>
                <td>{{ contact.id }}</td>
                <td>{{ contact.NomContact }}</td>
                <td>{{ contact.MailContact }}</td>
                <td>{{ contact.SujetContact }}</td>
                <td>
                    <button class="btn btn-success"><a href="{{ path('contact_show', {'id': contact.id}) }}">Voir</a></button>
                    {{ include('contact/_delete_form.html.twig') }}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">Aucun Message</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    </div>
{% endblock %}
